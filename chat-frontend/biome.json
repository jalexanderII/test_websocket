{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"*.config.js",
			"*.config.ts",
			"tsconfig*.json",
			"package.json",
			"package-lock.json",
			"bun.lockb",
			"src/components/ui/**"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
